.ion-input-text {
    background: input.bg;
    border: 1px solid #eee;
    border-radius: 3px;
    box-sizing: border-box;
    padding: 10px;
    transition: all 300ms cubic-bezier(0.165, 0.84, 0.44, 1);

    &.ion-input-lg {
        max-width: 500px;
        width: 500px;
    }
}

.ion-input-text:focus {
    border: 1px solid #0091ea;
    outline: 0;
}

.ion-textarea {
    background: input.bg;
    border: 1px solid #eee;
    border-radius: 3px;
    box-sizing: border-box;
    padding: 10px;
    transition: all 300ms cubic-bezier(0.165, 0.84, 0.44, 1);

    &:focus {
        border: 1px solid #0091ea;
        outline: 0;
    }
}
