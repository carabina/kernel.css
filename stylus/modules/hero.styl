.ion-hero {
    background: #2979ff;
    height: 500px;

    .ion-container {
        position: relative;
        text-align: center;
        transform: translateY(-50%);
        top: 50%;

        .ion-hero-header {
            color: #fafafa;
            font-size: 4.5em;
            font-weight: normal;
            margin: 0;
        }

        .ion-hero-paragraph {
