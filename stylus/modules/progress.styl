.ion-progressbar {
  background-color: progressbar.bg;
  border-radius: 3px;
  height: 25px;
  margin: 5px;
  width: 100%;

  .ion-progress {
    background-color: progressbar.progress-bg;
    border-radius: 3px;
    color: progressbar.progress-color;
    height: 25px;
    line-height: 25px;
    max-width: 100%;
    text-align: center;
    white-space: nowrap;
    width: 0;
  }
}
