.ion-nav {
    display: inline-block;

    .ion-nav-active-state {
        border-bottom: 3px solid nav.border-color;
    }

    ul {
        list-style-type: none;
        margin: 0;
        padding: 0;

        li {
            display: inline-block;
            transition: border 100ms cubic-bezier(0.165, 0.840, 0.440, 1.000);

            a {
                color: nav.link-color;
                display: block;
                outline: 0;
                padding: 0 15px;
                text-decoration: none;
                text-transform: uppercase;
            }
        }

        li:hover {
            border-bottom: 3px solid nav.border-color;
        }
    }
}

.ion-nav-mobile {
    background-color: nav.mobile-bg;
    height: 100%;
    position: fixed;
    top: 0;
    width: 100%;
    z-index: 99;

    ul {
        list-style-type: none;
        margin: 0;
        padding: 0;

        li {
            border-bottom: 1px solid nav.border-color;

            a {
                color: nav.link-color;
                display: block;
                font-size: 2.0em;
                padding: 15px;
                text-decoration: none;
                transition: all 100ms cubic-bezier(0.165, 0.84, 0.44, 1);
            }

            a:hover {
                background: nav.mobile-hover-bg;
            }
        }
    }
}
