.ion-base {
    color: font.color;
    font-family: font.font;
    -moz-osx-font-smoothing: grayscale;
    -webkit-font-smoothing: antialiased;

    h1,
    h2,
    h3,
    h4,
    h5,
    h6 {
        font-weight: normal;
    }

    p {
        line-height: 1.5em;
    h1 {
        font-size: 2.0em;
    }

    h2 {
        font-size: 1.75em;
    }

    h3 {
        font-size: 1.5em;
    }

    h4 {
        font-size: 1.25em;
    }

    h5 {
        font-size: 1.0em;
    }

    h6 {
        font-size: 0.75em;
    }
}
