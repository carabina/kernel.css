/* BASE */

font = {
    font: sans-serif,
    color: #212121
};

button = {
    bg: #fafafa
};

input = {
    bg: #fff
};

$main-padding = 15px;
$brand-font-size = 1.7em;

container = {
    width: 900px
};

util = {
    hr-bg: #eee,
    anchor-color: #0091ea
};

/* GENERIC */

btn-default = {
    bg: #f5f5f5
};

/* MODULES */

nav = {
    border-color: #ccc,
    link-color: #212121,
    mobile-bg: #fff,
    mobile-hover-bg: #eee
};

header = {
    bg: #fff
};

footer = {
    header-bg: #2962ff,
    header-color: #fafafa,
    link-color: #2196f3
};

card = {
    bg: #fff
};

alert = {
    bg: #f44336
};

message = {
    bg: #fff
};

code = {
    bg: #fce4ec,
    color: #e91e63,
    block-bg: #f5f5f5,
    block-color: #212121
};

sidebar = {
    icon-color: #fff,
    item-name-color: #fff,
    item-hover-border-color: #448aff
};

table = {
    td-color: #fff,
    td-border-color: #ccc
};

progressbar = {
    bg: #f5f5f5,
    progress-bg: #2196f3,
    progress-color: #fff
};

/**
 *  Require all the appliction specific styles.
 **/

@require 'style';
